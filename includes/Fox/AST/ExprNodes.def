//----------------------------------------------------------------------------//
// This file uses Macro to "register" every Expr nodes
// When including this file, the user can define custom macros to gather various informations
// about the nodes.
//----------------------------------------------------------------------------//

// Base macro for concrete classes of Expr.
// Concrete classes of Expr
#ifndef EXPR
	#define EXPR(ID,PARENT)
#endif

// Abstract Expressions
#ifndef ABSTRACT_EXPR
	#define ABSTRACT_EXPR(ID, PARENT)
#endif

/* Macros */

// Basic operations
EXPR(BinaryExpr,Expr)
EXPR(UnaryExpr,Expr)
EXPR(CastExpr,Expr)
EXPR(ArrayAccessExpr,Expr)

// Literals
EXPR(CharLiteralExpr,Expr)
EXPR(BoolLiteralExpr,Expr)
EXPR(IntegerLiteralExpr,Expr)
EXPR(FloatLiteralExpr,Expr)
EXPR(StringLiteralExpr,Expr)
EXPR(ArrayLiteralExpr,Expr)

// DeclRef & Function calls
EXPR(DeclRefExpr,Expr)
EXPR(MemberOfExpr,Expr)
EXPR(FunctionCallExpr,Expr)

/* Undef */
#undef EXPR
#undef ABSTRACT_EXPR