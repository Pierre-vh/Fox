//----------------------------------------------------------------------------//
//  Macros for macro-metaprogramming with Token Kinds
//----------------------------------------------------------------------------//

#ifndef TOKEN
  #define TOKEN(ID)
#endif

#ifndef KEYWORD
  #define KEYWORD(ID, TEXT) TOKEN(ID)
#endif

#ifndef PUNCTUATOR
  #define PUNCTUATOR(ID) TOKEN(ID)
#endif

//----------------------------------------------------------------------------//

TOKEN(Invalid)
TOKEN(Identifier)
TOKEN(IntLiteral)
TOKEN(DoubleLiteral)
TOKEN(CharLiteral)
TOKEN(BoolLiteral)
TOKEN(StringLiteral)

//----------------------------------------------------------------------------//

#undef TOKEN
#undef KEYWORD
#undef PUNCTUATOR