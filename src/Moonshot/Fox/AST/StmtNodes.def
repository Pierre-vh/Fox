// Base macro for concrete classes of Stmt.
// The Kind of the Stmt is StmtKind::ID
// The class is ID##Stmt and it's parent is PARENT
#ifndef STMT
	#define STMT(ID,PARENT)
#endif

/* Macros */

STMT(Return,Stmt)
STMT(Condition,Stmt)
STMT(Compound,Stmt)
STMT(While,Stmt)
STMT(Decl,Stmt)

/* Undef */

#undef STMT