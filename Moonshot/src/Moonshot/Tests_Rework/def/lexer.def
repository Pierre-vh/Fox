/*
	This file is used to register tests using macro metaprogramming.

	NOTE: Every file should undefine it's macro at the end of the file.
*/

// defines blank macros in case one of them isn't defined to avoid errors

#ifndef LEXER_TEST_CORRECT
	#define LEXER_TEST_CORRECT(FILE)
#endif

#ifndef LEXER_TEST_INCORRECT
	#define LEXER_TEST_INCORRECT(FILE)
#endif

LEXER_TEST_CORRECT("lexer/correct_1.fox")

LEXER_TEST_INCORRECT("lexer/incorrect_1.fox")
LEXER_TEST_INCORRECT("lexer/incorrect_2.fox")
LEXER_TEST_INCORRECT("lexer/incorrect_3.fox")
LEXER_TEST_INCORRECT("lexer/incorrect_4.fox")

#undef LEXER_TEST_CORRECT
#undef LEXER_TEST_INCORRECT