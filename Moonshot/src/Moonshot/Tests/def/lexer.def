// define some blank macros in case one of them isn't defined to avoid errors
#ifndef LEXER_TEST_CORRECT
	#define LEXER_TEST_CORRECT(FILE)
#endif

#ifndef LEXER_TEST_INCORRECT
	#define LEXER_TEST_INCORRECT(FILE)
#endif

LEXER_TEST_CORRECT("correct_1.fox")
LEXER_TEST_INCORRECT("incorrect_1.fox")
LEXER_TEST_INCORRECT("incorrect_2.fox")
LEXER_TEST_INCORRECT("incorrect_3.fox")
LEXER_TEST_INCORRECT("incorrect_4.fox")

#undef LEXER_TEST_CORRECT
#undef LEXER_TEST_INCORRECT